rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Calculators and Categories are public-readable, but only admins can write.
    match /calculator_categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    match /calculators/{calculatorId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // User-specific data. Users can read/write their own data.
    // Admins can read anyone's data but cannot write to it to prevent impersonation.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
